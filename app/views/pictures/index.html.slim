.row
  .col-lg-12
    .well
      h4
        b Photos
      .row
        .col-lg-12
          = submit_tag 'Delete', id: 'delete', class: 'btn btn-danger'
          .row
            .col-lg-12
              - @pictures.each do |pic|
                .col-lg-3
                  .thumbnail
                    = image_tag pic.file_name.url
                    .caption
                      p
                        = check_box_tag 'pictures[]', pic.id
